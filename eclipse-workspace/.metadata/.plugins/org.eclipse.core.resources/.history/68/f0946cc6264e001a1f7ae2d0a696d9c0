public class Point {
//instance variables 
	private int xcoord = 0;
	private int ycoord = 0;
	
//Constructors: a copy constructor and a constructor that takes initial values of x/y coord.
	public Point(int x, int y)
	{
		xcoord = x;
		ycoord = y; 
	}
//copy constructor
	Point(Point p1)
	{
		this.xcoord = p1.xcoord;
		this.ycoord = p1.ycoord;
	}

//M: get method - returning value
	public int getXcoord()
	{
		return xcoord;
	}
//M: get method - returning value
	public int getYcoord()
	{
		return ycoord;
	}

//M: moving up, down, left, right for the object
	public int moveUp()
	{
		return ycoord;
		
	}
	public int moveDown()
	{
		return -ycoord;
		
	}
	public int moveRight()
	{
		return xcoord;
		
	}
	public int moveLeft()
	{
		return -xcoord;
	}
	
//M: distance - arguments (og point, point2) - returns double |og point - point2| 
	public int distance(int Point, int newPoint)
	{
		return newPoint;
	}
	
}
